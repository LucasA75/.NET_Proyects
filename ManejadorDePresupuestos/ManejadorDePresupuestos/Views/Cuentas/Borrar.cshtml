@model Cuenta
@{
	ViewData["Title"] = "Borrar cuenta";
}

<h3 class="mb-3">¿Esta seguro que quiere borrar la cuenta @Model.Nombre?</h3>

<form asp-action="BorrarCuenta">
	<input type="hidden" asp-for="ID" />
	<button class="btn btn-danger" type="submit">Borrar</button>
	<button class="btn btn-secondary" asp-action="Index">Cancelar</button>
</form>
